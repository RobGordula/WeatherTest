@model WeatherViewModel
@{
	ViewData["Title"] = "Weather";
	ViewData["TemperatureUnit"] = Model.TemperatureUnit;
	ViewData["WindSpeedUnit"] = Model.WindSpeedUnit;
}

<div class="container">
	<div class="jumbotron" style="text-align:center;background-color:#fff;padding:48px 0">
		<h3 style="margin:0"><small>Current Location</small></h3>
		<h1 style="color:#3c763d !important;font-weight:800;margin:0">14&deg;</h1>
		<h2 style="margin:0"><small><span class="glyphicon glyphicon-move" aria-hidden="true"></span> 40 kph</small></h2>
	</div>
</div>
<div class="row">
	<div class="panel panel-default" style="width:324px;margin:0 auto">
		<div class="panel-heading" style="background-color:#fff;border-bottom:none;padding:15px 15px 5px">
			<h3 class="panel-title" style="font-size:24px">Check the weather</h3>
		</div>
		<div class="panel-body">
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Enter a location">
				<span class="input-group-btn">
					<button class="btn btn-info" type="button">
						<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
					</button>
				</span>
			</div>
		</div>
	</div>
</div>